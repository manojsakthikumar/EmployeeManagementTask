@model List<EmployeeManagement.Models.Employee>;

<div class="modal" id="viewEditEmployee" tabindex="-1" role="dialog" aria-labelledby="viewEditEmployeeModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document" style="width:90%; height:30rem";> 
        <div class="modal-content">
                <!--Modal Header Start-->
                <div class="modal-header">
                    <h4 class="modal-title">Employee Detail</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                </div>
                <!--Modal Header End-->
                @foreach (var employee in Model)
                {

                    <form asp-action="EditSave" asp-controller="Employees" method="post" enctype="multipart/form-data">

                        @Html.AntiForgeryToken()

                        <div class="modal-body form-horizontal">
                            <div class="form-group row">
                                @Html.HiddenFor(model => employee.ID)

                                @Html.LabelFor(model => employee.FirstName, new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-10">
                                    <input asp-for="@employee.FirstName" placeholder="Enter Name" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => employee.LastName, new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-10">
                                    <input asp-for="@employee.LastName" placeholder="Enter Name" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => employee.City, new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-10">
                                    <input asp-for="@employee.City" placeholder="Enter Name" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => employee.ZIP, new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-10">
                                    <input asp-for="@employee.ZIP" placeholder="Enter Name" class="form-control" />
                                </div>
                            </div>



                        </div>
                        <!--Modal Footer Start-->
                        <div class="modal-footer">
                            <button data-dismiss="modal" id="cancel" class="btn btn-default" type="button">Cancel</button>
                            <button type="button" class="btn btn-success relative" id="ModalbtnSubmit" data-save="modal">
                                <i class="loader"></i>
                                Save
                            </button>
                        </div>
                        <!--Modal Footer End-->
                    </form>
                }
            
        </div>
    </div>
</div>

